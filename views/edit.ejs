<%- include("top", {title}) %>

    <form method="post" action="/edit">
        <div class="mb-3">
            <label for="firstName" class="form-label">Edit First Name</label>
            <input type="text" class="form-control" name="firstName"  value = "<%=employee[0].first_name%>"
            placeholder="Employee's First Name" required="">
        </div>
        <div class="mb-3">
            <label for="lastName" class="form-label">Edit Last Name </label>
            <input type="text" class="form-control" name="lastName"  value = "<%=employee[0].last_name%>"
            placeholder="Employee's Last Name"  required="">
        </div>

        <label for="Job_title" class="form-label">Edit Job Role </label>

        <select class="form-select" name="jobTitle"  value = "<%=employee[0].role%>" aria-label="Default select example">
                <option selected><%=employee[0].role%></option>
                <% roles.forEach((role)=> { %>
                <option  value="<%=role.role%>">
                    <%=role.role%>
                </option>
                <% }) %>
        </select>
        

        <div class="mb-3">
            <label for="employeeNumber" class="form-label">Edit salary</label>
            <input type="number" class="form-control" name="employeeSalary"  value = "<%=employee[0].salary%>"
             placeholder="Employee's salary"
                required="">
        </div>

        <div class="mb-3">
            <label for="address" class="form-label">Edit Address</label>
            <input type="text" class="form-control" name="address"  value = "<%=employee[0].address%>"
            placeholder="Employee's Address" required="">
        </div> 
        <input type="hidden" name="employeeNumber" value="<%=employee[0].employee_number%>">
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

<%- include("bottom") %>